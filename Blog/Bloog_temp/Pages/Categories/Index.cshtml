@page
@model Bloog_temp.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Categories/Create"  class="btn btn-primary">
                <i class="bi bi-plus-square-dotted"></i>  New category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Order
                </th>
                <th>
                    Name 
                </th>
                <th>
                    Description
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(o => o.DisplayOrder))
            {
                <tr>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.Name</td>
                    <td>@obj.CategoryDescription</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">EDIT</i>
                            </a>
                            <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3">DELETE</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>